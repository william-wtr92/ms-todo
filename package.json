{
  "name": "ms-todo",
  "type": "module",
  "version": "0.0.1",
  "description": "Microservice for managing todos",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/src/index.js",
    "db:generate": "pnpm exec drizzle-kit generate",
    "db:migrate": "pnpm exec drizzle-kit migrate",
    "build:k6": "tsc -p tsconfig.k6.json && tsc-alias",
    "test:k6": "k6 run --out json=./src/tests/k6/k6.json ./dist/src/tests/k6/index.js"
  },
  "dependencies": {
    "@hono-rate-limiter/redis": "^0.1.4",
    "@hono/node-server": "^1.14.2",
    "@hono/prometheus": "^1.0.1",
    "@hono/sentry": "^1.2.1",
    "@hono/zod-validator": "^0.5.0",
    "bullmq": "^5.52.3",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.10",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.6.1",
    "postgres": "^3.4.5",
    "prom-client": "^15.1.3",
    "undici": "^7.10.0",
    "zod": "^3.25.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/k6": "^1.0.2",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.5.0"
  },
  "packageManager": "pnpm@10.11.0"
}
